<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:services="clr-namespace:JuegoPRU.Services"
             x:Class="JuegoPRU.Views.CombatPage"
             Title="Combat">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">
        
        <!-- Current Player Indicator -->
        <Frame BorderColor="#2196F3" CornerRadius="10" Padding="10" HasShadow="True">
            <Label Text="{Binding TurnIndicatorText}" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   HorizontalTextAlignment="Center"
                   TextColor="#2196F3"/>
        </Frame>

        <!-- Player Portraits -->
        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <Frame BorderColor="#B0BEC5" CornerRadius="12" Padding="8" HasShadow="True" Grid.Column="0">
                <Frame.Triggers>
                    <DataTrigger TargetType="Frame" Binding="{Binding IsPlayer1Turn}" Value="True">
                        <Setter Property="BorderColor" Value="#2196F3"/>
                        <Setter Property="BackgroundColor" Value="#E3F2FD"/>
                    </DataTrigger>
                </Frame.Triggers>
                <VerticalStackLayout Spacing="6">
                    <Image Source="{Binding Player1Image}" HeightRequest="110" Aspect="AspectFill"/>
                    <Label Text="{Binding Player1LabelText}"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="#B0BEC5" CornerRadius="12" Padding="8" HasShadow="True" Grid.Column="1">
                <Frame.Triggers>
                    <DataTrigger TargetType="Frame" Binding="{Binding IsPlayer1Turn}" Value="False">
                        <Setter Property="BorderColor" Value="#FF5722"/>
                        <Setter Property="BackgroundColor" Value="#FFF3E0"/>
                    </DataTrigger>
                </Frame.Triggers>
                <VerticalStackLayout Spacing="6">
                    <Image Source="{Binding Player2Image}" HeightRequest="110" Aspect="AspectFill"/>
                    <Label Text="{Binding Player2LabelText}"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <Image Source="{Binding CurrentCharacterImage}" HeightRequest="140" />

        <!-- Health Bars -->
        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <Frame BorderColor="#4CAF50" CornerRadius="10" Padding="10" HasShadow="True" Grid.Column="0">
                <VerticalStackLayout Spacing="5">
                    <Label Text="{Binding Player1LabelText}" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                    <ProgressBar Progress="{Binding Player1Health, Converter={StaticResource HealthConverter}}" 
                                 ProgressColor="#4CAF50"/>
                    <Label Text="{Binding Player1HPText}" 
                           HorizontalTextAlignment="Center" 
                           FontSize="12"/>
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="#FF5722" CornerRadius="10" Padding="10" HasShadow="True" Grid.Column="1">
                <VerticalStackLayout Spacing="5">
                    <Label Text="{Binding Player2LabelText}" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                    <ProgressBar Progress="{Binding Player2Health, Converter={StaticResource HealthConverter}}" 
                                 ProgressColor="#FF5722"/>
                    <Label Text="{Binding Player2HPText}" 
                           HorizontalTextAlignment="Center" 
                           FontSize="12"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <!-- Action Buttons -->
        <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*" ColumnSpacing="10" RowSpacing="10">
            <Button Text="{Binding Source={x:Static services:LocalizationManager.Instance}, Path=AttackButtonText}" 
                    Command="{Binding AttackCommand}"
                    Grid.Row="0" Grid.Column="0"
                    BackgroundColor="#FF5722"
                    TextColor="White"
                    IsEnabled="{Binding IsGameOver, Converter={StaticResource InvertedBoolConverter}}"/>
            <Button Text="{Binding Source={x:Static services:LocalizationManager.Instance}, Path=HealButtonText}" 
                    Command="{Binding HealCommand}"
                    Grid.Row="0" Grid.Column="1"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    IsEnabled="{Binding IsGameOver, Converter={StaticResource InvertedBoolConverter}}"/>
            <Button Text="{Binding Source={x:Static services:LocalizationManager.Instance}, Path=AdvanceButtonText}" 
                    Command="{Binding AdvanceCommand}"
                    Grid.Row="1" Grid.Column="0"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    IsEnabled="{Binding IsGameOver, Converter={StaticResource InvertedBoolConverter}}"/>
            <Button Text="{Binding Source={x:Static services:LocalizationManager.Instance}, Path=RetreatButtonText}" 
                    Command="{Binding RetreatCommand}"
                    Grid.Row="1" Grid.Column="1"
                    BackgroundColor="#FF9800"
                    TextColor="White"
                    IsEnabled="{Binding IsGameOver, Converter={StaticResource InvertedBoolConverter}}"/>
            <Button Text="{Binding Source={x:Static services:LocalizationManager.Instance}, Path=SurrenderButtonText}" 
                    Command="{Binding SurrenderCommand}"
                    Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                    BackgroundColor="#607D8B"
                    TextColor="White"
                    IsEnabled="{Binding IsGameOver, Converter={StaticResource InvertedBoolConverter}}"/>
        </Grid>

        <!-- Distance Display -->
        <Frame BorderColor="#9C27B0" CornerRadius="10" Padding="10" HasShadow="True">
            <Label Text="{Binding DistanceText}" 
                   FontSize="16" 
                   FontAttributes="Bold" 
                   HorizontalTextAlignment="Center"
                   TextColor="#9C27B0"/>
        </Frame>

        <!-- Game Over Section -->
        <Frame BorderColor="#4CAF50" CornerRadius="10" Padding="15" HasShadow="True" IsVisible="{Binding IsGameOver}">
            <VerticalStackLayout Spacing="10">
                <Label Text="{Binding GameOverMessage}" 
                       FontSize="20" 
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center"
                       TextColor="#4CAF50"/>
                <Button Text="{Binding Source={x:Static services:LocalizationManager.Instance}, Path=ReturnToMenuButtonText}" 
                        Command="{Binding ReturnToMenuCommand}"
                        BackgroundColor="#2196F3"
                        TextColor="White"/>
            </VerticalStackLayout>
        </Frame>

            <!-- Battle Log -->
            <Frame BorderColor="#607D8B" CornerRadius="10" Padding="10" HasShadow="True" HeightRequest="150">
                <CollectionView ItemsSource="{Binding BattleLog}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding .}" FontSize="12" TextColor="#455A64"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
