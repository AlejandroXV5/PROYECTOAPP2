<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:GAME.ViewModels"
             x:Class="GAME.Views.SettingsPage"
             Title="Settings">
    <ContentPage.BindingContext>
        <viewmodels:SettingsViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="{Binding Localization.SettingsText}" 
               FontSize="32" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" />

        <Label Text="{Binding Localization.LanguageLabel}" 
               FontSize="18" 
               FontAttributes="Bold" />

        <Button Text="{Binding Localization.EnglishText}" 
                Command="{Binding SetEnglishCommand}" 
                BackgroundColor="#2196F3" 
                TextColor="White" />

        <Button Text="{Binding Localization.SpanishText}" 
                Command="{Binding SetSpanishCommand}" 
                BackgroundColor="#4CAF50" 
                TextColor="White" />
    </VerticalStackLayout>
</ContentPage>
